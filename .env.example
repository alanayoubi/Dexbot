TELEGRAM_BOT_TOKEN=123456:telegram-token
BOT_APP_NAME=Dexbot
ALLOWED_TELEGRAM_USER_IDS=123456789
# Optional: lock to specific chat IDs (comma-separated), usually your private chat id
# ALLOWED_TELEGRAM_CHAT_IDS=123456789
# Set false only if you intentionally want group/forum usage.
# For group topics, set false and allowlist the group chat id above.
TELEGRAM_PRIVATE_ONLY=true
# Group behavior: when true, bot replies in groups only to @mentions or replies to bot messages.
TELEGRAM_GROUP_REQUIRE_MENTION=true

# Use current repo by default
CODEX_CWD=.
AUTO_SPAWN_APP_SERVER=true
CODEX_APP_SERVER_URL=ws://127.0.0.1:8787

# Access profile examples:
# full (high risk, isolated machine only): CODEX_ACCESS_PROFILE=full, CODEX_SANDBOX=danger-full-access, CODEX_APPROVAL_POLICY=never
# partial (recommended for most users): CODEX_ACCESS_PROFILE=partial, CODEX_SANDBOX=workspace-write, CODEX_APPROVAL_POLICY=on-request
# read-only: CODEX_ACCESS_PROFILE=readonly, CODEX_SANDBOX=read-only, CODEX_APPROVAL_POLICY=on-request
CODEX_ACCESS_PROFILE=full
CODEX_APPROVAL_POLICY=never
CODEX_SANDBOX=danger-full-access
# CODEX_MODEL=o3
# CODEX_MODEL_PROVIDER=openai
# CODEX_PERSONALITY=pragmatic
CODEX_ENABLE_MULTI_AGENT=true
# CODEX_ENABLE_CHILD_AGENTS_MD=false

DB_PATH=./data/memory.db
MEMORY_ROOT=./memory

TELEGRAM_STREAM_EDIT_INTERVAL_MS=1000
TELEGRAM_TYPING_INTERVAL_MS=4000
TELEGRAM_HANDLER_TIMEOUT_MS=600000
SCHEDULE_POLL_INTERVAL_MS=15000
# SCHEDULE_DEFAULT_TIMEZONE=America/Los_Angeles
SKILLS_ROOT=./.agents/skills
SKILLS_INCLUDE_CODEX_HOME=true
# SKILLS_CODEX_HOME_ROOT=/Users/alanclaw/.codex/skills

# Local Whisper (voice transcription)
WHISPER_ENABLED=true
WHISPER_COMMAND=whisper
WHISPER_MODEL=base
# WHISPER_LANGUAGE=en
WHISPER_TASK=transcribe
WHISPER_TIMEOUT_MS=240000
WHISPER_PERSISTENT=true
# WHISPER_PYTHON_COMMAND=/opt/homebrew/Cellar/openai-whisper/20250625_3/libexec/bin/python
# WHISPER_EXTRA_ARGS=--fp16 False

# AssemblyAI (for YouTube/audio transcription script)
# ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Memory tuning
MEMORY_EMBEDDING_DIM=96
MEMORY_SESSION_SUMMARY_EVERY_TURNS=4
MEMORY_MAX_SESSION_SUMMARY_LINES=320
MEMORY_MAX_FACTS_PER_RETAIN=10
MEMORY_MAX_EPISODES_PER_RETAIN=3
MEMORY_MAX_STABLE_FACTS=8
MEMORY_MAX_EPISODES=4
MEMORY_MAX_OPEN_LOOPS=6
MEMORY_MAX_INJECTION_TOKENS=360
MEMORY_CONFIDENCE_THRESHOLD=0.6
MEMORY_CURATED_MIN_CONFIDENCE=0.75
MEMORY_RECENCY_BIAS_DAYS=45
MEMORY_MULTI_AGENT_COMPLEXITY_THRESHOLD=0.68
MEMORY_MAX_CURATED_LINES=300
MEMORY_HEARTBEAT_HOURS=24
MEMORY_HEARTBEAT_COMPRESS_OLDER_THAN_DAYS=7
MEMORY_HEARTBEAT_DECAY_DAYS=45
MEMORY_HEARTBEAT_DECAY_STEP=0.04
